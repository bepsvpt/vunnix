APP_NAME=Vunnix
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database — PostgreSQL (D72)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=vunnix
DB_USERNAME=vunnix
DB_PASSWORD=secret
DB_FORWARD_PORT=5432

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=10080
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting — Reverb
BROADCAST_CONNECTION=reverb

# Filesystem
FILESYSTEM_DISK=local

# Queue — Redis (D134)
QUEUE_CONNECTION=redis

# Cache — Redis
CACHE_STORE=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_FORWARD_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# GitLab OAuth (D151)
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URI=/auth/gitlab/callback
GITLAB_URL=https://gitlab.com

# GitLab Bot PAT (for API calls)
GITLAB_BOT_TOKEN=

# GitLab Bot Account ID (for filtering bot's own events — D154)
GITLAB_BOT_ACCOUNT_ID=

# Anthropic API Key (D153 — .env only, never in database)
ANTHROPIC_API_KEY=

# Vunnix Task Execution (D127, §19.3)
VUNNIX_TASK_BUDGET_MINUTES=60
VUNNIX_API_URL="${APP_URL}"

# Laravel Reverb (WebSocket)
REVERB_APP_ID=vunnix
REVERB_APP_KEY=vunnix-key
REVERB_APP_SECRET=vunnix-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

# Laravel Octane
OCTANE_SERVER=frankenphp

# Docker — port forwarding
APP_PORT=8000
APP_HTTPS_PORT=8443

# Mail
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@vunnix.local"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
