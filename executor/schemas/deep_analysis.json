{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "analysis", "key_findings", "references"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "analysis": {
      "type": "string",
      "description": "Comprehensive analysis response in markdown format"
    },
    "key_findings": {
      "type": "array",
      "description": "Key findings or insights from the analysis",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title for the finding"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the finding"
          },
          "severity": {
            "type": "string",
            "enum": ["info", "warning", "critical"],
            "description": "Severity level (info for observations, warning for concerns, critical for urgent issues)"
          }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "line", "context"],
        "properties": {
          "file": {
            "type": "string",
            "description": "File path"
          },
          "line": {
            "type": "integer",
            "description": "Line number"
          },
          "context": {
            "type": "string",
            "description": "Why this file is relevant"
          }
        }
      }
    }
  }
}
