# Vunnix — Production Environment
# Copy to .env on the production server and fill in real values.
# See docs/deployment.md for full setup instructions.

# Docker image version — pin to a release (e.g., 1.0.0) or use "latest"
VUNNIX_VERSION=latest

APP_NAME=Vunnix
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://vunnix.example.com
# Proxy trust (D207)
# Set specific load balancer / reverse proxy IPs or CIDRs (comma-separated).
TRUSTED_PROXIES=*

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database — PostgreSQL (D72)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=vunnix
DB_USERNAME=vunnix
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=10080
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=vunnix.example.com

# Broadcasting — Reverb
BROADCAST_CONNECTION=reverb

# Filesystem
FILESYSTEM_DISK=local

# Queue — Redis (D134)
QUEUE_CONNECTION=redis

# Cache — Redis
CACHE_STORE=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# GitLab OAuth (D151)
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URI=/auth/gitlab/callback
GITLAB_URL=https://gitlab.example.com

# GitLab Bot PAT (for API calls)
GITLAB_BOT_TOKEN=

# GitLab Bot Account ID (for filtering bot's own events — D154)
GITLAB_BOT_ACCOUNT_ID=

# Anthropic API Key (D153 — .env only, never in database)
ANTHROPIC_API_KEY=

# Vunnix Task Execution (D127, §19.3)
VUNNIX_TASK_BUDGET_MINUTES=60
VUNNIX_API_URL="${APP_URL}"

# Laravel Reverb (WebSocket)
REVERB_APP_ID=vunnix
REVERB_APP_KEY=CHANGE_ME_REVERB_KEY
REVERB_APP_SECRET=CHANGE_ME_REVERB_SECRET
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=https

# Laravel Octane
OCTANE_SERVER=frankenphp

# Docker — port forwarding
APP_PORT=443
APP_HTTPS_PORT=443

# Mail
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=CHANGE_ME_MAIL_USERNAME
MAIL_PASSWORD=CHANGE_ME_MAIL_PASSWORD
MAIL_FROM_ADDRESS="noreply@vunnix.example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Backup
BACKUP_RETENTION_DAYS=30
