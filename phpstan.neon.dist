includes:
    - phpstan-baseline.neon

parameters:
    # ext-019 modular architecture guardrail scope
    paths:
        - app/
        - app/Modules/
    level: 8
    ignoreErrors:
        # Larastan limitation: Eloquent's __callStatic forwarding (e.g., Model::where(),
        # Model::pluck()) is not fully resolved by Larastan + phpstan-strict-rules.
        # These are false positives â€” the calls are valid at runtime.
        - identifier: staticMethod.dynamicCall
